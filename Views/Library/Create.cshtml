@model ozhar_hasfarim.ViewModels.LibraryVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create new library</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control">
                    <option value="Tora">תורה</option>
                    <option value="Halacha">הלכה</option>
                    <option value="Chasidut">חסידות</option>
                    <option value="Musar">מוסר</option>
                    <option value="Hagut">הגות</option>
                    <option value="Machshava">מחשבה</option>
                    <option value="Kabala">קבלה</option>
                    <option value="Chinuch">חינוך</option>
                    <option value="Shonot">שונות</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
