@model IEnumerable<ozhar_hasfarim.ViewModels.ShelfVM>;

@{
    ViewData["Title"] = "Index";
}

<h1>Shelves in library num @ViewBag.LibraryId</h1>

<p>
    @Html.ActionLink(
        "Create new shelf", 
        "Create", 
        new { libraryId = ViewBag.LibraryId }
    )
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, libraryId = ViewBag.LibraryId  }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                @Html.ActionLink("Sets in Shelf", "Index", "BooksSet", new { shelfId = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
