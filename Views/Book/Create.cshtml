@model ozhar_hasfarim.ViewModels.BookVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Create book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control">
                    <option value="Tora">תורה</option>
                    <option value="Halacha">הלכה</option>
                    <option value="Chasidut">חסידות</option>
                    <option value="Musar">מוסר</option>
                    <option value="Hagut">הגות</option>
                    <option value="Machshava">מחשבה</option>
                    <option value="Kabala">קבלה</option>
                    <option value="Chinuch">חינוך</option>
                    <option value="Shonot">שונות</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="BooksSetId" class="form-control" value="@Model.BooksSetId" hidden />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", new { booksSetId = Model.BooksSetId }) |

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
