@model IEnumerable<ozhar_hasfarim.ViewModels.BooksSetVM>;

@{
    ViewData["Title"] = "Index";
}

<h1>Create new books set in shelf num @ViewBag.ShelfId</h1>

<p>
    @Html.ActionLink(
        "Create new books set",
        "Create",
        new { ShelfId = ViewBag.ShelfId }
    )
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelfId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, shelfId = ViewBag.ShelfId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id,  })|
                @Html.ActionLink("Books in set", "Index", "Book", new { booksSetId = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
